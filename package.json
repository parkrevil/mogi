{
  "name": "mogi",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/api-server",
    "apps/scraping-server",
    "apps/website",
    "packages/bun-shared"
  ],
  "author": "revil",
  "email": "revil.com@gmail.com",
  "license": "MIT",
  "description": "Mabinogi Mobile 3rd party service.",
  "repository": {
    "type": "git",
    "url": "https://github.com/revil/mogi.git"
  },
  "bugs": {
    "url": "https://github.com/revil/mogi/issues"
  },
  "homepage": "https://github.com/revil/mogi#readme",
  "engines": {
    "bun": ">=1.2.0"
  },
  "packageManager": "bun@1.2.0",
  "scripts": {
    "dev:api-server": "bun run --cwd apps/api-server dev",
    "dev:scraping-server": "bun run --cwd apps/scraping-server dev",
    "dev:website": "bun run --cwd apps/website dev",
    "dev:all": "bun run dev:api-server & bun run dev:scraping-server & bun run dev:website",
    "clean": "rm -rf apps/*/dist apps/*/.next apps/*/node_modules"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "resolutions": {
    "typescript": "^5.0.0"
  }
}