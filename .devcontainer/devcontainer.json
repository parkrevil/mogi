{
  "name": "Mogi Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "runArgs": [
    "--network=host",
    "--name=devcontainer",
    "--label=com.docker.compose.project=mogi-dev",
    "--label=com.docker.compose.service=devcontainer"
  ],
  "initializeCommand": "sudo chown -R 1000:1000 ${localWorkspaceFolder} && sudo chmod -R 755 ${localWorkspaceFolder}",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "./features/go": {},
    "./features/bun": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go"
      ],
      "settings": {
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "keyboard.dispatch": "keyCode"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "docker compose -f docker/docker-compose.yml up -d",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/.container-volumes,target=/workspaces/mogi/.container-volumes,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind"
  ]
}