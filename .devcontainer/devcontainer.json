{
  "name": "Mogi Development Environment",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "runArgs": [
    "--network=host",
    "--name=devcontainer",
    "--label=com.docker.compose.project=mogi-dev",
    "--label=com.docker.compose.service=devcontainer"
  ],
  "initializeCommand": "sudo chown -R 1000:1000 ${localWorkspaceFolder} && sudo chmod -R 755 ${localWorkspaceFolder}",
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {},
    "ghcr.io/devcontainers/features/golang:1": {
      "version": "1.25.0"
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "2.44.0"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "golang.Go"
      ],
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.checkForUpdates": "local",
        "go.formatTool": "goimports",
        "go.lintTool": "golangci-lint",
        "typescript.preferences.includePackageJsonAutoImports": "on",
        "typescript.suggest.autoImports": true,
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
          "source.organizeImports": "explicit"
        },
        "keyboard.dispatch": "keyCode"
      }
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "docker-compose -f ./docker-compose.yml up -d",
  "remoteUser": "vscode",
  "mounts": [
    "source=${localWorkspaceFolder}/.container-volumes,target=/workspaces/mogi/.container-volumes,type=bind",
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind",
    "source=${localEnv:HOME}/.gitconfig,target=/home/vscode/.gitconfig,type=bind"
  ],
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/go/bin"
  },
  "forwardPorts": [
    10000,
    10001,
    10002,
    27117,
    6479
  ],
  "portsAttributes": {
    "10000": {
      "label": "Website",
      "onAutoForward": "notify"
    },
    "10001": {
      "label": "API",
      "onAutoForward": "notify"
    },
    "10002": {
      "label": "Suction Server",
      "onAutoForward": "notify"
    },
    "27117": {
      "label": "MongoDB",
      "onAutoForward": "notify"
    },
    "6479": {
      "label": "Redis Stack",
      "onAutoForward": "notify"
    }
  }
}